<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/material_on_surface_disabled"
    android:padding="@dimen/widget_margin"
    android:theme="@style/ThemeOverlay.Sammus.AppWidgetContainer">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/widgetHitnoTitle"
            style="@style/regularTextSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@string/widgetHitnoTitle" />

        <Button
            android:id="@+id/widgetHitnoButton1"
            style="@style/buttonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/buttonshapealt"
            android:elevation="5dp"
            android:text="Button"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <Button
            android:id="@+id/widgetHitnoButton2"
            style="@style/buttonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/buttonshapealt"
            android:elevation="5dp"
            android:text="Button"
            android:textColor="@color/white"
            android:textSize="20sp" />

    </LinearLayout>
</RelativeLayout>